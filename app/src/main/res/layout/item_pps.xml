<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Center Name -->
            <TextView
                android:id="@+id/tvPPSName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sekolah Kebangsaan Skudai"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brand_blue"/>

            <!-- Edit Icon (Subtle Hint) -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/text_grey"/>
        </LinearLayout>

        <!-- Capacity Text Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tvCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occupancy: 240 / 300"
                android:textSize="13sp"
                android:textColor="@color/text_grey"/>

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

            <!-- Percentage Badge -->
            <TextView
                android:id="@+id/tvPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80% Full"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="@color/brand_orange"/>
        </LinearLayout>

        <!-- VISUAL BAR (HCI: Immediate Feedback) -->
        <ProgressBar
            android:id="@+id/progressCapacity"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="80"
            android:progressDrawable="@drawable/custom_progress_bar"
            android:layout_marginTop="5dp"/>
        <!-- Note: Use default style if you don't have custom drawable -->

    </LinearLayout>
</androidx.cardview.widget.CardView>