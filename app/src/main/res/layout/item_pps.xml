<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPPSName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tvPercent"
            android:text="Sekolah Kebangsaan Skudai"
            android:textColor="#1565C0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="85%"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#F57C00"/>

        <TextView
            android:id="@+id/tvCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPPSName"
            android:layout_marginTop="8dp"
            android:text="Max: 300 | Current: 250"
            android:textSize="14sp"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/tvAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCapacity"
            android:layout_marginTop="4dp"
            android:text="Available Slots: 50"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#388E3C"/> <ProgressBar
        android:id="@+id/progressCapacity"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/tvAvailable"
        android:layout_marginTop="12dp"
        android:progressDrawable="@drawable/custom_progress_bar"
        android:max="100"
        android:progress="85"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>