<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <!-- LOGO ICON (Round & Red Background) -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#FFEBEE"> <!-- Light Red Background -->

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="#D32F2F"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- INFO TEXT -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/tvRespName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balai Polis Skudai"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"/>

            <TextView
                android:id="@+id/tvRespType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POLIS DIRAJA MALAYSIA"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvRespPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07-5555555"
                android:textSize="14sp"
                android:textColor="@color/text_grey"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- CALL BUTTON (Green & Large) -->
        <ImageButton
            android:id="@+id/btnCallNow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_call"
            android:background="@drawable/ic_launcher_background"
            android:backgroundTint="#E8F5E9"
            app:tint="#2E7D32"
            android:contentDescription="Call Now"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>