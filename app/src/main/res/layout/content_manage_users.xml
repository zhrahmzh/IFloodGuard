<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New User"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

        <!-- Name -->
        <EditText
            android:id="@+id/etNewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Staff Name (e.g., Ali bin Abu)"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <!-- Email -->
        <EditText
            android:id="@+id/etNewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Staff Email (e.g., ali@tec.com)"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <!-- Role (Spinner is better, but EditText is fine for simplicity) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assign Role:"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <android.widget.Spinner
            android:id="@+id/spinnerRole"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="25dp"/>

        <!-- Auto-Generated Password Display -->
        <TextView
            android:id="@+id/tvGeneratedPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto-Password: (Will generate on click)"
            android:textColor="#757575"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <!-- Create Button -->
        <Button
            android:id="@+id/btnCreateUser"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Create &amp; Email Credentials"
            android:textSize="16sp"
            android:backgroundTint="#1565C0"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>