<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1565C0"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/left"
            app:tint="#FFFFFF"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History Water Level"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/etSearchHistory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/headerContainer"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:elevation="3dp"
        android:hint="Search Status or Date"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:drawableTint="#1565C0"
        android:imeOptions="actionSearch"
        android:inputType="text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/etSearchHistory"
        android:padding="16dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp"/>

    <TextView
        android:id="@+id/tvEmptyHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No historical records were found."
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>